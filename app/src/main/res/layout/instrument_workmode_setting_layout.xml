<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/instrument_device_status_labale"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仪表状态:"/>
    <Spinner
        android:id="@+id/instrument_device_status_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/instrument_device_status_labale"
        android:layout_toEndOf="@id/instrument_device_status_labale"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"
        android:background="#CFCFCF" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/instrument_device_type_labale"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仪表类型:"/>
        <Spinner
            android:id="@+id/instrument_device_type_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/instrument_device_type_labale"
            android:layout_toEndOf="@id/instrument_device_type_labale"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"
        android:background="#CFCFCF" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/instrument_device_addr_labale"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="仪表地址:"/>
        <EditText
            android:id="@+id/instrument_device_addr_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:layout_toRightOf="@id/instrument_device_addr_labale"
            android:layout_toEndOf="@id/instrument_device_addr_labale"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"
        android:background="#CFCFCF" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/instrument_device_pow_suply_labale"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供电时长(10ms):"/>
        <EditText
            android:id="@+id/instrument_device_pow_suply_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:layout_toRightOf="@id/instrument_device_pow_suply_labale"
            android:layout_toEndOf="@id/instrument_device_pow_suply_labale"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"
        android:background="#CFCFCF" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/instrument_device_elster_labale"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elster press 地址:"/>
        <EditText
            android:id="@+id/instrument_device_elster_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:layout_toRightOf="@id/instrument_device_elster_labale"
            android:layout_toEndOf="@id/instrument_device_elster_labale"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"
        android:background="#CFCFCF" />
</LinearLayout>
