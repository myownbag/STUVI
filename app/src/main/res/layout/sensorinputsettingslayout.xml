                    android:textColor="#444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sensor_type4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_sensor_type4_label"
                    android:layout_toRightOf="@+id/tv_sensor_type4_label"
                    android:textColor="#444"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="4"
                android:background="#fff" >

                <TextView
                    android:id="@+id/tv_sensor_time1_label"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/ANALOG_SCAN_FREQUENCE"
