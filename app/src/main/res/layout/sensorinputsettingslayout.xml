<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/sensor_press1set"
    android:layout_weight="3"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff" >
        <TextView
            android:id="@+id/tv_sensor_type1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/ANALOG_INPUT1"
            android:textColor="#444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sensor_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_sensor_type1_label"
            android:layout_toRightOf="@+id/tv_sensor_type1_label"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#444"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_sensor_type1_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_sensor_type1"
            android:layout_toRightOf="@+id/tv_sensor_type1"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#444"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/ANALOG_INPUT_LIMITE"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ANALOG_INPUT_LIMITE"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:background="#fff" >

        <TextView
            android:id="@+id/tv_sensor_pressvalue1h_label"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/ANALOG_UPPER_LIMITE"
            android:textColor="#444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sensor_pressvalue1h"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#444"
            android:textSize="14sp"
            android:inputType="numberDecimal"/>



        <TextView
            android:id="@+id/tv_sensor_pressvalue1l_label"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/ANALOG_LOWER_LIMITE"
            android:textColor="#444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sensor_pressvalue1l"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:inputType="numberDecimal"
            android:textColor="#444"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CFCFCF" />
